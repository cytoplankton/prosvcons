extend layout
block scripts
    script(type="text/javascript", src="scripts/app.js")
block content
    .row
        .col-sm-12
            form(name="titleForm", ng-submit="saveTitle()" novalidate)
                h1.text-center
                    .titleTextWrapper(ng-hide="titleInputVisible")
                        span {{title}}
                        a(href="javascript: void(0);", ng-click="showTitleInput()").glyphicon.glyphicon-pencil
                    .titleInputWrapper(ng-show="titleInputVisible")
                        input(id="titleInput", name="titleInput", type="text", ng-model="title")
                        a(href="javascript: void(0);", ng-click="cancelTitleInput()").cancelTitle
                            .glyphicon.glyphicon-remove
                            | cancel

                div.checkbox
                    label
                        input(type="checkbox", ng-model="showWeights")
                        | Show Weights
    .row.prosAndCons
        #pros.col-sm-5.panel
            form(name="proForm", ng-submit="proForm.$valid && savePro()" novalidate)
                input(type="submit", style="position: absolute; left: -9999px; width: 1px; height: 1px;")

                table.table
                    thead
                        tr
                            th Pros
                            th(ng-show="showWeights") Weight
                    tbody
                        tr
                            th
                                input#pro(type="text", placeholder="Add your pro...", ng-model="currentPro.description", required)
                            th(ng-show="showWeights")
                                input(type="number", ng-model="currentPro.weight", min="0", max="100").proWeight
                        tr(ng-repeat="pro in pros")
                            th
                                | {{pro.description}}
                                a(href="javascript: void(0);", ng-click="removePro($index)")
                                    span.glyphicon.glyphicon-trash
                            th(ng-show="showWeights")
                                | {{pro.weight}}

        #cons.col-sm-5.col-sm-offset-2.panel
            form(name="conForm", ng-submit="conForm.$valid && saveCon()" novalidate)
                input(type="submit", style="position: absolute; left: -9999px; width: 1px; height: 1px;")

                table.table
                    thead
                        tr
                            th Cons
                            th(ng-show="showWeights") Weight
                    tbody
                        tr
                            th
                                input#con(type="text", placeholder="Add your con...", ng-model="currentCon.description", required)
                            th(ng-show="showWeights")
                                input(type="number", ng-model="currentCon.weight", min="0", max="100").conWeight
                        tr(ng-repeat="con in cons")
                            th
                                | {{con.description}}
                                a(href="javascript: void(0);" ng-click="removeCon($index)")
                                    span.glyphicon.glyphicon-trash
                            th(ng-show="showWeights")
                                | {{con.weight}}
    .row
        .col-sm-12.text-center
            button.btn-lg.btn-primary(ng-click="saveList()")
                | Save!