extend layout
block scripts
    script(type="text/javascript", src="scripts/app.js")
    script(type="text/javascript", src="scripts/index.js")
block content
    .row
        form(name="titleForm", ng-submit="AppCtrl.saveTitle")
            h1.text-center
                .titleTextWrapper(ng-hide="AppCtrl.showTitleInput")
                    span Add a title...
                    a(href="javascript: void(0);", ng-click="AppCtrl.toggleTitleInput()").glyphicon.glyphicon-pencil
                .titleInputWrapper(ng-show="AppCtrl.showTitleInput")
                    input(type="text", ng-model="AppCtrl.title")
                    a(href="javascript: void(0);", ng-click="AppCtrl.toggleTitleInput()").glyphicon.glyphicon-remove
                        | cancel

            div.checkbox
                label
                    input(type="checkbox", ng-model="AppCtrl.showWeights")
                    | Show Weights
    .row.prosAndCons
        #pros.col-md-5.panel
            form(name="proForm", ng-submit="proForm.$valid && AppCtrl.savePro()" novalidate)
                input(type="submit", style="position: absolute; left: -9999px; width: 1px; height: 1px;")

                table.table
                    thead
                        tr
                            th Pros
                            th(ng-show="AppCtrl.showWeights") Weight
                    tbody
                        tr
                            th
                                input#pro(type="text", placeholder="Add your pro...", ng-model="AppCtrl.currentPro.description", required)
                            th(ng-show="AppCtrl.showWeights")
                                input(type="number", ng-model="AppCtrl.currentPro.weight", min="0", max="100").proWeight
                        tr(ng-repeat="pro in AppCtrl.pros")
                            th
                                {{pro.description}}
                                a(href="javascript: void(0);", ng-click="AppCtrl.removePro($index)")
                                    span.glyphicon.glyphicon-trash
                            th(ng-show="AppCtrl.showWeights")
                                {{pro.weight}}

        #cons.col-md-5.col-md-offset-2.panel
            form(name="conForm", ng-submit="conForm.$valid && AppCtrl.saveCon()" novalidate)
                input(type="submit", style="position: absolute; left: -9999px; width: 1px; height: 1px;")

                table.table
                    thead
                        tr
                            th Cons
                            th(ng-show="AppCtrl.showWeights") Weight
                    tbody
                        tr
                            th
                                input#con(type="text", placeholder="Add your con...", ng-model="AppCtrl.currentCon.description", required)
                            th(ng-show="AppCtrl.showWeights")
                                input(type="number", ng-model="AppCtrl.currentCon.weight", min="0", max="100").conWeight
                        tr(ng-repeat="con in AppCtrl.cons")
                            th
                                {{con.description}}
                                a(href="javascript: void(0);" ng-click="AppCtrl.removeCon($index)")
                                    span.glyphicon.glyphicon-trash
                            th(ng-show="AppCtrl.showWeights")
                                {{con.weight}}
